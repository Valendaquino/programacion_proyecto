<%- include('./partials/headerLogueado') %>
	
	<!-- Banner -->
	<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
		  <div class="carousel-item active">
			<img class="d-block w-100" src="images/bannerloco.png" alt="First slide">
		  </div>
		  <div class="carousel-item">
			<img class="d-block w-100" src="images/banner22.jpeg" alt="Second slide">
		  </div>
		  <div class="carousel-item">
			<img class="d-block w-100" src="images/banner3.jpeg" alt="Third slide">
		  </div>
		</div>
	  </div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<div class="separadores"><h2 class="product-tittle">Novedades</h2></div>
			</div>
			<% for(let i = 0 ; i<resultados.length; i++) {  %> 

			<!-- Show the "ultimos" products -->
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/producto/<%=resultados[i].id %> ">
						<figure class="product-box_image">
							<img class= "img-producto" src="/images/products/<%=resultados[i].url_image %> " alt="<%=resultados[i].name_ %>">
						</figure>
						<article class="product-box_data">
							<h2><%=resultados[i].name_ %></h2>
							<p><%=resultados[i].description%></p>
							
						</article>
					</a>
				</section>
			</div>
			   <%  } %> 
		</div> 
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<div></div>
				<div class="separadores"><h2 class="product-tittle">Mas comentados</h2></div>
			</div>
			<% for(let i = 0 ; resultados.length<8 ; i++) {  %> 

			<!-- Show the "ultimos" products -->
			
			<div class="col-12 col-sm-6 col-lg-3">

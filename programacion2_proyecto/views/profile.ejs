<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="images/products/tini.png" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">Tini Stoessel
						<a href="/editarPerfil">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<div class="separadores"><h2>Mis productos</h2> </div>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0 ; i<8; i++) {  %> 

				<!-- Show the "ultimos" products -->
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/<%=producto[i].id %> ">
							<figure class="product-box_image">
								<img class= "img-producto" src="<%=producto[i].imagen %> " alt="<%=producto[i].nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%=producto[i].nombre%></h2>
								<p><%=producto[i].descripcion%></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
				   <%  } %> 
		</div>
		</div>
	<!-- /Mis productos -->


<%- include('./partials/footer') %> 	
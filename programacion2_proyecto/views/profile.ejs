<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= locals.user.profile_photo%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= locals.user.name_users %> 
						<a href="/editarPerfil/<%= locals.user.id %> ">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					
					
				</div>
				<hr class="separador">
				<div class="d-flex align-items-center">
					
						<h3 class=" caracteristicasperfil" >Comentarios relizados</h3>
						<h3 class="caracteristicasperfil">Seguidores</h3>
						<h3 class="caracteristicasperfil">Publicaciones</h3>
					
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<div class="separadores"><h2>Mis productos</h2> </div>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0 ; i<producto.length; i++) {  %> 

				<!-- Show the "ultimos" products -->
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/<%=producto[i].id %> ">
							<figure class="product-box_image">
								<img class= "img-producto" src="<%=producto[i].url_img %> " alt="<%=producto[i].name_ %>">
							</figure>
							<article class="product-box_data">
								<h2><%=producto[i].name_ %></h2>
								<p><%=producto[i].description%></p>
							
							</article>
						</a>
					</section>
				</div>
				   <%  } %> 
		</div>
		</div>
	<!-- /Mis productos -->


<%- include('./partials/footer') %> 	
<%- include('./partials/headerLogueado') %>


	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= user.profile_photo%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="info" class="d-flex align-items-center ">
					<h1 class="main-title"><%= user.username%> 
						
		
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a> 
				
				</div>
				<hr class="separador">
				<div class="caja" class="d-flex align-items-center">
					<div class="cajita">
						<h2 class="infop"><%=  comments.length %></h2>
						<h3 class="">Comentarios relizados </h3>

						
					</div>
						
					<div class="cajita">
							<h2 class="infop"> <%= product.length %> </h2>
							<h3 class="">Publicaciones</h3>
					</div>
						
					
				</div>
			</div>
		</div>
	</section>


	<div class="container products-wrapper">
		<div class="row">
					<div class="col-12">
						<div class="separadores"><h2>Productos publicados</h2> </div>
					</div>
			<!-- Show mis productos -->
			
			<% for(let i = 0 ; i<product.length; i++) {  %>
				<!-- Show the "ultimos" products -->
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/<%=product[i].id %> ">
							<figure class="product-box_image">
								<img class= "img-producto" src="/images/products/<%=product[i].url_image %> " alt="<%=product[i].name_ %>">
							</figure>
							<article class="product-box_data">
								<h2><%=product[i].name_ %></h2>
								<p><%=product[i].description%></p>
								
							</article>
						</a>
					</section>
				</div>


				
					
				   <%  } %> 
		</div>
	</div>
	<!-- /Mis productos -->


<%- include('./partials/footer') %> 	
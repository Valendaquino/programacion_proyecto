<%- include('./partials/headerLogueado') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2> 
				
			</div>
			<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
				<symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
				  <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
				</symbol>
			  </svg>
			<% if(locals.errors){ %>
				
				<div class="alert alert-danger d-flex align-items-center" role="alert">
					<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
					<div>
						<h3><%= errors.add%></h3>
					</div>
				  </div>
				
			
		<% } %>
			<!-- Show the "ultimos" products -->
			<div class="contenedor">
			<div class="form">
				<form action="/agregarProducto" method="POST" enctype="multipart/form-data">
					
					<label for="" class="form-label">Nombre del producto</label>
					<input type="text" class="form-input" placeholder="Insertar nombre" name="name">

					<label for="" class="form-label">Agrega una descripci√≥n del producto</label>
					<p><textarea name="description"  class="form-input" rows="5" cols="50"> </textarea></p>
					
					<label class="form-label">Inserta imagen de tu producto</label>
					<input type="file" class="form-input" name="url_image">
					
					<div class="mb-3" class="form-label">
						<label class="form-label"> Genero</label>
						<select class="form-control" name="genre_id" id="">
							<% for (let i=0; i<genres.length; i++){ %>
								<option value="<%= genres[i].id%>">
									<%= genres[i].name%>
								</option>
								<%}%> 
						</select>
					</div>

					<div class="button">
					<button type="submit" class="boton"> Publicar Producto</button>
					</div>
				</form>
				
				
			</div>
		

			<img class= "gift" src="images/agregarproducto.jpeg" alt="giftcard">
		</div>
		</div>
	</div>

<%- include('./partials/footer') %> 	
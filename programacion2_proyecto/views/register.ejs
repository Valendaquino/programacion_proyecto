<%- include('./partials/headerLogueado') %>

	
	<div class="container products-wrapper">
		<div class="">
			<div class="col-12">
			<h2 class="products-title">Registrate</h2> 
			</div>
			<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
				<symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
				  <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
				</symbol>
			  </svg>
			<% if(locals.errors){ %>
				
				<div class="alert alert-danger d-flex align-items-center" role="alert">
					<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
					<div>
						<h3><%= errors.register %></h3>
					</div>
				  </div>
				
			
		<% } %>
			
			
		<div class="contenedor">
			<div class="formulario">
				<form action="/creaTuCuenta" method="POST" >
					<label class="form-label" for="">Nombre:</label>
					<input class="form-input" name="nombre" value=""  type="text" placeholder="Pepito...">

					<label class="form-label" for="">Apellido:</label>
					<input class="form-input" name="apellido" value=""  type="text" placeholder="Gomez...">

					<label  class="form-label" for="start">Fecha de nacimiento:</label>
					<input  class="form-input" type="date" id="start" name="nacimiento"
       				value="2018-07-22"
       				min="1970-01-01" max="2018-12-31">

					<label class="form-label" for="">E-mail:</label>
					<input class="form-input" name="email" value=""  type="email" placeholder="pepito_gomez@gmail.com">

					<label class="form-label" class="form-label" for="">Nombre de Usuario:</label>
					<input class="form-input" name="usuario" value=""  type="text" placeholder="pepito123">

					<label class="form-label" for="">Contraseña:</label>
					<input class="form-input" name="password" value=""  type="text" placeholder="*******">

					<label class="form-label" for="">Confirmar contraseña:</label>
					<input class="form-input"  name="repassword" value="" type="text" placeholder="*******">
					<div class="button">
					<button type="submit"  class="boton"> Crear Cuenta</button>
					</div>
				</form>

			</div>
			<div>
				<div style="width:100%;height:0;padding-bottom:100%;position:relative;"><iframe src="https://giphy.com/embed/MNolM0COeDjQQ" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/make-up-MNolM0COeDjQQ"></a></p>
			</div>
		</div>
	</div>	
	</div> 
	<%- include('./partials/footer') %> 	

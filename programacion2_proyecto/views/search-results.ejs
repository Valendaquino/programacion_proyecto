<%- include('./partials/headerLogueado') %>


			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Resultado de Busqueda</h2>
					</div>
					
		
					<!-- Show the "ultimos" products -->
					<% if(resultados == ""){  %> 
						<h3 class="search">No hay resultados para su criterio de b√∫squeda</h3>
					<%} else{ %> 
						<% for(let i = 0 ; i<resultados.length; i++) {  %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/producto/<%=resultados[i].id %> ">
								<figure class="product-box_image">
									<img class= "img-producto" src="/images/products/<%=resultados[i].url_image %> " alt="<%=resultados[i].name_ %>">
								</figure>
								<article class="product-box_data">
									<h2><%=resultados[i].name_ %></h2>
									<section>
									<h4><a href="/perfilUsuarios/<%=resultados[i].user.id%>"> @<%=resultados[i].user.username%></a></h4>
									<p><%=resultados[i].description%></p>
								</section>
								</article>
							</a>
						</section>
					</div>
					   <%  }} %> 
				</div> 
			</div>


<%- include('./partials/footer') %> 	